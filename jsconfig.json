{
  "compilerOptions": {
    "experimentalDecorators": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": [
        "src/components/*"
      ],
      "@controllers/*": [
        "src/controllers/*"
      ],
      "@store/*": [
        "src/store/*"
      ],
      "@styles/*": [
        "src/styles/*"
      ],
      "@utils/*": [
      "src/utils/*"
      ],
      "@services/*": [
        "src/services/*"
      ],
      "@firebase/*": [
        "src/firebase/*"
      ],
      "@layouts/*": [
        "src/layouts/*"
      ],
      "@pages/*": [
        "src/pages/*"
      ],
      "@types/*": [
        "src/types/*"
      ]
    }
  }
}