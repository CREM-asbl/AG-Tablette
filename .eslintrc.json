{
  "extends": [
    "eslint:recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "plugins": [
    "html",
    "lit"
  ],
  "rules": {
    "no-undef": "warn",
    "no-unused-vars": "warn",
    "import/no-extraneous-dependencies": "off",
    "lit/binding-positions": "error"
  }
}