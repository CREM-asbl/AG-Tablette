{
  "entrypoint": "index.html",
  "shell": "src/my-app.html",
  "fragments": [],
  "sources": [
    "src/**/*",
    "images/**/*",
    "data/**/*",
    "bower.json",
    "index.html",
    "src/my-app.html"
  ],
  "extraDependencies": [
    "bower_components/webcomponentsjs/*.js",
    "manifest.json",
    "bower_components/webcomponentsjs/webcomponents-lite.js"
  ],
  "builds": [
    {
      "addServiceWorker": true,
      "js": {
        "compile": true,
        "minify": true
      },
      "css": {
        "minify": true
      },
      "html": {
        "minify": true
      }
    }
  ],
  "lint": {
    "rules": [
      "polymer-2"
    ]
  }
}