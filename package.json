{
  "scripts": {
    "start": "snowpack dev",
    "start-emulators": "firebase emulators:start --only hosting",
    "build": "snowpack build && workbox generateSW",
    "format": "prettier --write \"src/**/*.js\"",
    "lint": "prettier --check \"src/**/*.js\"",
    "deploy": "npm run build && firebase deploy --only hosting:default",
    "deploy:beta": "npm run build && firebase deploy --only hosting:beta",
    "deploy:beta2": "npm run build && firebase hosting:channel:deploy $(cat public/manifest.json | grep version | head -1 | awk -F: '{ print $2 }' | sed 's/[\",]//g' | sed 's/[^0-9.]//g') --expires 30d",
    "test": "[[ -n $npm_config_folder && -d test/$npm_config_folder ]] && { npm run test:folder; exit 0;} || npm run test:all",
    "test:folder": "echo \"running tests in folder $npm_config_folder\" && web-test-runner \"test/$npm_config_folder/*.test.js\" --node-resolve",
    "test:all": "echo \"running all tests\" && web-test-runner \"test/**/*.test.js\" --node-resolve"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-decorators": "^7.10.5",
    "@esm-bundle/chai": "^4.3.0",
    "@snowpack/plugin-babel": "^2.1.7",
    "@snowpack/plugin-dotenv": "^2.0.5",
    "@web/test-runner": "^0.12.15",
    "babel-plugin-root-import": "^6.6.0",
    "prettier": "^2.4.1"
  },
  "dependencies": {
    "client-zip": "^2.0.0",
    "firebase": "^9.0.2",
    "firebase-tools": "^10.9.2",
    "idb": "^7.0.1",
    "lit": "^2.0.0",
    "npm": "^8.1.1",
    "pwa-helpers": "^0.9.1",
    "snowpack": "^3.8.8",
    "tslib": "^2.2.0",
    "workbox": "^0.0.0",
    "workbox-cli": "^6.5.3"
  }
}
