{
  "type": "module",
  "scripts": {
    "dev": "astro dev --port 4324",
    "disable-dev-toolbar": "astro preferences disable devToolbar",
    "start-emulators": "firebase emulators:start",
    "build": "astro build",
    "deploy": "firebase deploy",
    "deploy:beta": "firebase deploy --only hosting:beta",
    "deploy:beta2": "firebase hosting:channel:deploy $(cat public/manifest.json | grep version | head -1 | awk -F: '{ print $2 }' | sed 's/[\\\"ØŒ]//g' | sed 's/[^0-9.]//g') --expires 30d",
    "deploy:beta3": "firebase hosting:channel:deploy beta --expires 30d",
    "deploy:rules": "npm run deploy:firestore-rules && npm run deploy:storage-rules",
    "deploy:firestore-rules": "firebase deploy --only firestore:rules",
    "deploy:storage-rules": "firebase deploy --only storage",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "format": "prettier --write \"src/**/*.{js,ts,json}\"",
    "format:check": "prettier --check \"src/**/*.{js,ts,json}\"",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:playwright": "playwright test",
    "test:coverage": "vitest run --coverage",
    "test:all": "npm run test && npm run test:playwright"
  },
  "devDependencies": {
    "@open-wc/testing": "^4.0.0",
    "@playwright/test": "^1.52.0",
    "@types/node": "^25.0.8",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "@vitest/coverage-v8": "^4.0.9",
    "astrojs-service-worker": "^2.0.0",
    "eslint": "^10.0.1",
    "eslint-plugin-lit": "^2.1.1",
    "fake-indexeddb": "^6.2.5",
    "jsdom": "^28.1.0",
    "prettier": "^3.6.2",
    "vitest": "^4.0.9"
  },
  "dependencies": {
    "@astrojs/lit": "^4.3.0",
    "@lit-labs/signals": "^0.2.0",
    "astro": "^5.16.0",
    "fflate": "^0.8.0",
    "firebase": "^12.2.1",
    "lz-string": "^1.5.0"
  }
}